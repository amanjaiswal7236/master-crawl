{
  "name": "master-crawl",
  "version": "1.0.0",
  "description": "SaaS-grade AI-powered sitemap generator with async crawling",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build"
  },
  "keywords": ["sitemap", "crawler", "puppeteer", "ai", "saas"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "bullmq": "^5.1.1",
    "playwright": "^1.40.0",
    "ioredis": "^5.3.2",
    "ws": "^8.14.2",
    "express-ws": "^5.0.2",
    "robots-parser": "^2.1.1",
    "url-parse": "^1.5.10",
    "openai": "^4.20.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}

